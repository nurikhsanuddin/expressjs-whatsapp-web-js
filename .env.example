# API Configuration
API_KEY=your-secret-api-key-here

# Server Configuration
PORT=3626

# Force New Session (set to true to delete existing session on startup)
# Set to true if you want to force re-scan QR code
FORCE_NEW_SESSION=false

# WhatsApp Configuration
HEADLESS_MODE=true

# Browser Optimization
JS_MEMORY_LIMIT=128
DISK_CACHE_SIZE=1
USE_SINGLE_PROCESS=false
USE_MEMORY_CACHE=true
DISABLE_SPELLCHECK=true
DISABLE_GPU=true
DISABLE_IMAGES=false
DISABLE_SOUNDS=true

# Chrome/Chromium Path (optional, auto-detect if not set)
# CHROME_PATH=/usr/bin/google-chrome
